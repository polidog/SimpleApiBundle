{
    "name": "polidog/simple-api-bundle",
    "description": "Simple API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "polidog",
            "email": "polidogs@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Polidog\\SimpleApiBundle\\": "src/"
        }
